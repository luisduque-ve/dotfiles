return {
	"akinsho/toggleterm.nvim",
	event = "VeryLazy",
	version = "*",
	opts = {
		direction = "float",
    {{ if eq .chezmoi.hostname "CrazySquirrel"}}
		shell = "/opt/homebrew/bin/fish",
    {{ end }}
	},
	keys = {
		{ "<C-t>", "<CMD>ToggleTerm<CR>", mode = { "n", "v", "t", "i" }, desc = "toggleterm" },
		{ "<leader>ut", "<CMD>ToggleTermSendCurrentLine<CR><CMD>ToggleTerm<CR>", desc = "send_line_to_toggleterm" },
	},
}
