local wezterm = require("wezterm")

return {
  color_scheme = "Gruvbox light, medium (base16)",
  default_prog = { '{{- .brew_path -}}/bin/fish', '-l' },
  font = wezterm.font({
    family = "FiraCode Nerd Font Mono",
  }),
  {{- if eq .chezmoi.os "windows" }}
  font_size = 14.0,
  {{- else }}
  font_size = 19.0,
  {{- end }}
  hide_tab_bar_if_only_one_tab = true,
