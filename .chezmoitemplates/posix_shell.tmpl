{{/* MacOS specific shell configs */}}
{{- if eq .chezmoi.os "darwin" -}}
# zsh config
# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('{{.chezmoi.homeDir}}/miniconda3/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "{{.chezmoi.homeDir}}/miniconda3/miniconda3/etc/profile.d/conda.sh" ]; then
        . "{{.chezmoi.homeDir}}/miniconda3/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="{{.chezmoi.homeDir}}/miniconda3/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

export PATH=/opt/homebrew/bin:$PATH
{{ end }}

